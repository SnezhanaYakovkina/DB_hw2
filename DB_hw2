create table if not exists genres(
genre_id serial primary key,
genre_name varchar(40) not null
);

create table if not exists singers(
singer_id serial primary key,
singer_name varchar(100) not null,
album_name varchar(100) not null,
genre_id integer references genres(genre_id)
);

create table if not exists albums(
album_id serial primary key,
album_title varchar(40) not null,
album_year date not null,
album_tracks text unique,
singer_id integer references singers(singer_id)
);

create table if not exists tracks(
track_id serial primary key,
track_title varchar(100) not null,
track_durations time not null,
album_id integer references albums(album_id)
);

alter table singers drop column album_name;

alter table albums drop column album_tracks;

alter table albums drop column album_year;
alter table albums add column album_year integer not null;

alter table tracks drop column track_durations;
alter table tracks add column track_duration integer not null;





